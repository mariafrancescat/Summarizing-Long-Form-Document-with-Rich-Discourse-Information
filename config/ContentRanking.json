{
    "params":{
        "embedding_dim":25,
        "tokenizer":true
    },
    "tokenizer":{
        "class":"Arxiv_preprocess",
        "params":{
            "padding":30
        }
    },
    "train":{
        "training_class":"ContentRankingTraining",
        "training_dataset":{
            "class":"DocumentDataset",
            "data_path":"arxiv_train_subset.json",
            "params":{
                "padding":30
            }
        },
        "validation_dataset":{
            "class":"DocumentDataset",
            "data_path":"arxiv_val_subset.json",
            "params":{
                "padding":30
            }
        },
        "training_dataloader":{
            "class":"ArxivDataLoader",
            "params":{
                "batch_size":16,
                "shuffle":true,
                "max_sections":4,
                "max_sentences_per_section":100,
                "padding":30
            }
        },
        "training_epochs":2,
        "optimizer":{
            "name":"SGD",
            "lr":0.001
        },
        "loss":{
            "name":"ContentRankingLoss"
        }
    },
    "inference":{
        "data_path":"arxiv_test_subset.json",
        "params":{
            "number_of_sections":3,
            "number_of_sentences":8
        }
    }
}
