{
    "params":{
        "tokenizer":false
    },
    "tokenizer":{
        "class":"BartTokenizer",
        "params":{
            "padding":"max_length",
            "truncation":true,
            "max_length":100
        }
    },
    "train":{
        "training_class":"BartTraining",
        "training_dataset":{
            "class":"BartDataset",
            "data_path":null,
            "params":{
                "encoder_max_length":40,
                "decoder_max_length":8
            }
        },
        "validation_dataset":{
            "class":"BartDataset",
            "data_path":null,
            "params":{
                "encoder_max_length":40,
                "decoder_max_length":8
            }
        },
        "training_dataloader":{
            "class":"BartDataLoader",
            "params":{
                "batch_size":2,
                "encoder_max_length":40,
                "decoder_max_length":8,
                "outputFolder":"Test_run"
            }
        },
        "training_epochs":2,
        "optimizer":{
            "name":"default"
        },
        "loss":{
            "name":"default"
        }
    },
    "inference":{
        "data_path":"arxiv_test_subset.json",
        "params":{
            "number_of_sections":3,
            "number_of_sentences":8
        }
    }
}